<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <template id="web_layout" name="Website Google Domain Verification" inherit_id="web.layout">
        <xpath expr="//head" position="inside">
        <meta t-if="website and website.google_domain_verification_code" name="google-site-verification" t-attf-content="{{ website.google_domain_verification_code }}"/>
        </xpath>
    </template>

</odoo>
